chmod +x install; chmod +x download; chmod +x run;
chmod +x edit; chmod +x restore_gui; chmod +x nv_driver;
sudo cp -n /etc/default/grub /etc/default/grub.bck;
sudo mv grb /etc/default/grub; sudo mv nouveau /etc/modprobe.d/blacklist-nouveau.conf;
sudo systemctl set-default multi-user.target;
sudo update-initramfs -u;
echo -e "Preparing to reboot and login into console mode. Install NVIDIA driver with ./nv_driver";
sleep 5 && reboot;
